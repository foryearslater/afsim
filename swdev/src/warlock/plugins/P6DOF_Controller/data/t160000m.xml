<?xml version="1.0"?>
<devicelist>  
  
  <device name="T16000M">
    <id_string name="T.16000M"/>
	
	<!-- *** MAIN CONTROLS ******************************************************** -->
	
    <value name="roll">
      <axis name="0" deadzone="0.05"/>
    </value>
    <value name="pitch">
      <axis name="1" deadzone="0.05"/>
    </value>
    <value name="rudder">
      <axis name="2" value="-1,1"/>
    </value>

    <value name="throttle">
      <axis name="3" value="1,0"/>
    </value>

	<!-- *** MODIFIERS ************************************************************ -->

    <value name="mod1">
      <toggle_button name="7"/>
    </value>
	
    <value name="mod2">
      <toggle_button name="6"/>
    </value>

	<!-- *** Main Buttons ********************************************************* -->

	<!-- Unmodified trigger, which fires weapon(s) -->
    <value name="trigger_fire">
      <button name="0"/>
      <button name="7" value="1,0" mult="1"/>
      <button name="6" value="1,0" mult="1"/>
    </value>

    <!-- Mod1 trigger, which locks target -->
	<value name="lock_target">
      <button name="0"/>
      <button name="7" value="0,1" mult="1"/>
      <button name="6" value="1,0" mult="1"/>
    </value>

    <!-- Mod2 trigger, which unlocks target -->
	<value name="unlock_target">
      <button name="0"/>
      <button name="7" value="1,0" mult="1"/>
      <button name="6" value="0,1" mult="1"/>
    </value>
	
	<!-- Fires weapon(s) [key version]
    <value name="trigger_pulled">
	  <state_key name="t" value="0,1"/>
    </value>
	-->

	<!-- Unmodified main (left) button, which releases weapon(s) -->
    <value name="weapon_release">
      <button name="2"/>
      <button name="7" value="1,0" mult="1"/>
      <button name="6" value="1,0" mult="1"/>
    </value>

    <!-- Mod1 left button, which dispenses chaff -->
    <value name="chaff_release">
      <button name="2"/>
      <button name="7" value="0,1" mult="1"/>
      <button name="6" value="1,0" mult="1"/>
    </value>

	<!-- Mod2 main (left) button, which toggles lft mfd modes -->
    <value name="mfd_mode_lft_cycle">
      <button name="2"/>
      <button name="7" value="1,0" mult="1"/>
      <button name="6" value="0,1" mult="1"/>
    </value>

	<!-- Unmodified center button, which toggles AB -->
	<value name="afterburner">
      <toggle_button name="1"/>
      <button name="7" value="1,0" mult="1"/>
      <button name="6" value="1,0" mult="1"/>
    </value>

    <!-- Mod1 center button, which dispenses CM -->
	<value name="cm_release">
      <button name="1"/>
      <button name="7" value="0,1" mult="1"/>
      <button name="6" value="1,0" mult="1"/>
    </value>

    <!-- Mod2 center button, which cycles active mfd -->
	<value name="mfd_active_cycle">
      <button name="1"/>
      <button name="7" value="1,0" mult="1"/>
      <button name="6" value="0,1" mult="1"/>
    </value>

	<!-- Unmodified right button, which cycles through weapons -->
    <value name="weapon_select">
      <button name="3"/>
      <button name="7" value="1,0" mult="1"/>
      <button name="6" value="1,0" mult="1"/>
    </value>

    <!-- Mod1 right button, which dispenses flares -->
    <value name="flare_release">
      <button name="3"/>
      <button name="7" value="0,1" mult="1"/>
      <button name="6" value="1,0" mult="1"/>
    </value>

	<!-- Mod2 right button, which toggles rgt mfd modes -->
    <value name="mfd_mode_rgt_cycle">
      <button name="3"/>
      <button name="7" value="1,0" mult="1"/>
      <button name="6" value="0,1" mult="1"/>
    </value>	

	<!-- *** Left Side Buttons **************************************************** -->

    <value name="spd_brake_extend">
      <button name="9"/>
    </value>

    <value name="spd_brake_retract">
      <button name="4"/>
    </value>

	<!-- *** Right Side Buttons *************************************************** -->
	
    <value name="landing_gear_down">
      <toggle_button name="13" value="1,0"/>
    </value>

    <value name="flaps_down">
      <toggle_button name="12" value="1,0"/>
    </value>
	
	<!-- *** HAT CONTROLS ********************************************************* -->

	<!-- Unmodified HAT controls, which controls trim -->
    <value name="trim_az">
      <hat name="0" axis="h" value="-1.0,1.0"/>
      <button name="7" value="1,0" mult="1"/>
      <button name="6" value="1,0" mult="1"/>
	  
    </value>
    <value name="trim_el">
      <hat name="0" axis="v" value="-1.0,1.0"/>
      <button name="7" value="1,0" mult="1"/>
      <button name="6" value="1,0" mult="1"/>
    </value>

	<!-- Mod1 HAT controls, which controls TD symbol -->
    <value name="td_rgt_lft">
      <hat name="0" axis="h" value="-1.0,1.0"/>
      <button name="7" value="0,1" mult="1"/>
      <button name="6" value="1,0" mult="1"/>
    </value>
    <value name="td_up_dn">
      <hat name="0" axis="v" value="-1.0,1.0"/>
      <button name="7" value="0,1" mult="1"/>
      <button name="6" value="1,0" mult="1"/>
    </value>
	
	<!-- Mod2 HAT controls, which controls sensor EL/Az -->
    <value name="sensor_az_rgt_lft">
      <hat name="0" axis="h" value="-1.0,1.0"/>
      <button name="7" value="1,0" mult="1"/>
      <button name="6" value="0,1" mult="1"/>
    </value>
    <value name="sensor_el_up_dn">
      <hat name="0" axis="v" value="-1.0,1.0"/>
      <button name="7" value="1,0" mult="1"/>
      <button name="6" value="0,1" mult="1"/>
    </value>
	
	<!--
    <value name="view_az_accum">
      <hat name="0" axis="h" value="-1.0,1.0"/>
      <toggle_button name="9" value="0,1" mult="1"/>
    </value>
    <value name="view_el_accum">
      <hat name="0" axis="v" value="-1.0,1.0"/>
      <toggle_button name="9" value="0,1" mult="1"/>
    </value>
	-->

	<!-- *** WEAPON CONTROLS ****************************************************** -->

	<!-- Toggles master arm on/off (armed/safe) -->
    <value name="master_arm">
	  <state_key name="m" value="0,1"/>
    </value>	

	<!-- Cycles through the weapons mode (A/A and A/G) -->
    <value name="weapon_mode">
      <state_key name="n" value="0,1"/>
    </value>	

	<!-- *** JAMMER CONTROLS ****************************************************** -->

	<!-- Toggles ECM/Jammer power on/off -->
    <value name="ecm_power">
	  <state_key name="e" value="0,1"/>
    </value>	

	<!-- Toggles ECM/Jammer mode between standby and auto -->
    <value name="ecm_auto">
      <state_key name="d" value="0,1"/>
    </value>	

	<!-- *** SENSOR CONTROLS ****************************************************** -->

	<!-- Toggles radar power on/off -->
    <value name="radar_power">
	  <state_key name="r" value="0,1"/>
    </value>

	<!-- Cycles through radar modes -->
    <value name="radar_mode_cycle">
	  <state_key name="t" value="0,1"/>
    </value>

	<!-- Cycles through radar submodes of the current mode -->
    <value name="radar_submode_cycle">
	  <state_key name="y" value="0,1"/>
    </value>
	
	<!-- Toggles irst power on/off -->
    <value name="irst_power">
	  <state_key name="i" value="0,1"/>
    </value>

	<!-- Cycles through irst modes -->
    <value name="irst_mode_cycle">
	  <state_key name="o" value="0,1"/>
    </value>

	<!-- Cues the irst to radar primary target -->
    <value name="irst_cue_to_radar">
	  <state_key name="p" value="0,1"/>
    </value>

	<!-- Cues the irst to look at HMD boresight -->
    <value name="irst_cue_head">
	  <state_key name="u" value="0,1"/>
    </value>

	<!-- Toggles flir power on/off -->
    <value name="flir_power">
	  <state_key name="f" value="0,1"/>
    </value>

	<!-- Cycles through flir modes -->
    <value name="flir_mode_cycle">
	  <state_key name="g" value="0,1"/>
    </value>

	<!-- Toggles rwr power on/off -->
    <value name="rwr_power">
	  <state_key name="w" value="0,1"/>
    </value>

	<!-- Toggles rwr filtering -->
    <value name="rwr_filter">
	  <state_key name="e" value="0,1"/>
    </value>

	<!-- Centers the active sensor -->
    <value name="center_sensor">
	  <state_key name="5" value="0,1"/>
    </value>
	
    <value name="sensor_rng_incr">
      <button name="5" value="1,0"/>
    </value>

    <value name="sensor_rng_decr">
      <button name="8" value="1,0"/>
    </value>
	
	<!-- *** HUD AND DISPLAYS CONTROLS ******************************************** -->

	<!-- This cycles through HUD modes -->
    <value name="hud_mode_cycle">
	  <state_key name="h" value="0,1"/>
    </value>

    <!-- These next two are alternative. If desired, comment-out variant above -->	
	<!-- This cycles through Left MFD modes 
    <value name="mfd_mode_lft_cycle">
	  <state_key name="j" value="0,1"/>
    </value> -->	
	<!-- This cycles through Right MFD modes 
    <value name="mfd_mode_rgt_cycle">
	  <state_key name="k" value="0,1"/>
    </value> -->
	
	<!-- This cycles through MFDs, making one of them active -->
    <value name="mfd_active_cycle">
	  <state_key name="l" value="0,1"/>
    </value>
	
	<!-- *** MISC CONTROLS ******************************************************** -->

	<!-- This jettisons all external (drop) tanks -->
    <value name="jett_ext_tanks">
	  <state_key name="v" value="0,1"/>
    </value>	

	<!-- This silences a Master Warning/Caution -->
    <value name="master_warn">
	  <state_key name="b" value="0,1"/>
    </value>	

  </device>  
</devicelist>
