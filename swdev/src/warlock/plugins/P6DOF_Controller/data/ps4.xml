<?xml version="1.0"?>
<devicelist>
  <device name="PS4">
    <id_string name="Wireless Controller*"/>
    <id_string name="Sony*"/>
    <value name="roll">
      <axis name="0" deadzone="0.1"/>
    </value>
    <value name="pitch">
      <axis name="1" deadzone="0.1"/>
    </value>
    <value name="view_az">
      <axis name="2" deadzone="0.1"/>
    </value>
    <value name="view_el">
      <axis name="5" deadzone="0.1"/>
    </value>
    <value name="rudder">
      <button name="4" value="0,-1"/>
      <button name="5"/>
    </value>
    <value name="throttle">
      <toggle_button name="10" value="0,0.5"/>
      <axis name="3" value="0,0.5"/>
    </value>
    <value name="pause">
      <toggle_button name="9"/>
    </value>
  </device>
</devicelist>
