<?xml version="1.0"?>
<devicelist>
  <device name="XBox360">
    <id_string name="XInput*"/>
    <!-- left stick lf/rt -->
    <value name="roll">
      <axis name="0" deadzone="0.2"/>
    </value>
    <!-- left stick up/dn -->
    <value name="pitch">
      <axis name="1" deadzone="0.2"/>
    </value>
    <!-- right stick lf/rt -->
    <value name="view_az">
      <axis name="3" deadzone="0.2"/>
    </value>
    <!-- right stick up/dn -->
    <value name="view_el">
      <axis name="4" deadzone="0.2"/>
    </value>
    <!-- shoulder buttons -->
    <value name="rudder">
      <button name="4" value="0,-1"/>
      <button name="5"/>
    </value>
    <!-- left trigger -->
    <value name="throttle">
      <axis name="2" value="0,1"/>
    </value>
    <!-- left stick click -->
    <value name="afterburner">
      <toggle_button name="8"/>
    </value>
	
    <!-- This toggles using the hat for trim or view angle control: back button -->
    <value name="trim-view-button">
      <toggle_button name="6"/>
    </value>

    <!-- This toggles through the weapons list: hat right -->
    <value name="weapon_select_toggled">
      <hat name="0" axis="h" value="-1.0,1.0"/>
    </value>	
	
    <value name="spd_brake_up">
      <toggle_button name="0" value="0,1"/>
    </value>
    <value name="spd_brake_down">
      <toggle_button name="0" value="1,0"/>
    </value>
    <value name="hud_mode_cycle">
	  <state_key name="h" value="0,1"/>
    </value>
  </device>
</devicelist>
