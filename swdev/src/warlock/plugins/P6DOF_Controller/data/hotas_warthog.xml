<?xml version="1.0"?>
<devicelist>
  <device name="warthog">
    <id_string name="Joystick - HOTAS Warthog*" subdevice="0"/>
    <id_string name="Throttle - HOTAS Warthog*" subdevice="1"/>
    <value name="roll">
      <axis name="0" subdevice="0"/>
    </value>
    <value name="pitch">
      <axis name="1" subdevice="0"/>
    </value>
    <!--
    <value name="rudder">
      <button name="17" subdevice="0" value="0,-1"/>
      <button name="15" subdevice="0"/>
    </value>
    -->
    
    <value name="trim_az">
      <hat name="0" subdevice="0" axis="h" value="-1.0,1.0"/>
    </value>
    <value name="trim_el">
      <hat name="0" subdevice="0" axis="v" value="-1.0,1.0"/>
    </value>
    
    <value name="view_az_accum">
      <button name="11" subdevice="0"/>
      <button name="13" subdevice="0" value="0,-1"/>
    </value>
    <value name="view_el_accum">
      <button name="12" subdevice="0" value="0,-1"/>
      <button name="10" subdevice="0"/>
    </value>
    
    <value name="throttle">
      <axis name="2" subdevice="1" value="1,0"/>
<!--  <axis name="3" subdevice="1" value="1,0"/> -->
    </value>
    <value name="afterburner">
      <toggle_button name="14" subdevice="1"/>
    </value>

    <value name="spd_brake_up">
      <button name="7" subdevice="1"/>
    </value>
    <value name="spd_brake_down">
      <button name="6" subdevice="1"/>
    </value>

    <value name="landing_gear_down">
      <button name="23" subdevice="1" value="1,0"/>
    </value>

    <value name="pinkie_paddle">
      <button name="3" subdevice="0"/>
    </value>

    <value name="trigger_pulled">
      <button name="0"/>
    </value>	
    
  </device>
</devicelist>
