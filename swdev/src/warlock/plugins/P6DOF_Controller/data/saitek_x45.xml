<?xml version="1.0"?>
<devicelist>
   <device name="SaitekX45">
      <id_string name="Saitek X45" />
      <value name="roll">
         <axis name="0" />
      </value>
      <value name="pitch">
         <axis name="1" />
      </value>
      <value name="rudder">
         <axis name="3" />
      </value>	
      <value name="throttle">
         <axis name="4" />
      </value>	

      <value name="trim_az">
         <hat name="0" axis="h" value="-1.0,1.0"/>
      </value>
      <value name="trim_el">
         <hat name="0" axis="v" value="-1.0,1.0"/>
      </value>
      <value name="afterburner">
         <toggle_button name="5" />
      </value>
      <value name="spd_brake_up">
         <button name="22" />
      </value>
      <value name="spd_brake_down">
         <button name="24" />
      </value>

      <!-- This toggles using the hat for trim or view angle control -->
      <value name="trim-view-button">
         <toggle_button name="9"/>
      </value>

      <!-- This fires weapons -->
      <value name="trigger_pulled">
         <button name="0"/>
      </value>	

      <!-- This toggles through the weapons list -->
      <value name="weapon_select_toggled">
         <button name="2"/>
      </value>	

      <!-- This dispenses flares, hold down to repeatedly dispense -->
      <value name="dispense_flares">
         <button name="7"/>
      </value>	

      <!-- This dispenses chaff, hold down to repeatedly dispense -->
      <value name="dispense_chaff">
         <button name="13"/>
      </value>	

      <!-- This jettisons all external (drop) tanks -->
      <value name="jett_ext_tanks">
         <toggle_button name="16"/>
      </value>
   </device>
</devicelist>
